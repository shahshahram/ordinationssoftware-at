# One-Click-Billing Configuration

# Kassen-API (ELGA/e-Card)
KASSA_API_URL=https://api.krankenkasse.at
KASSA_API_KEY=your_kassa_api_key_here

# Versicherungs-APIs
ALLIANZ_API_KEY=your_allianz_api_key_here
GENERALI_API_KEY=your_generali_api_key_here
WST_API_KEY=your_wiener_staedtische_api_key_here

# Payment Gateways
STRIPE_SECRET_KEY=sk_test_your_stripe_secret_key
STRIPE_WEBHOOK_SECRET=whsec_your_webhook_secret
SEPA_API_KEY=your_sepa_api_key_here
PAYPAL_CLIENT_ID=your_paypal_client_id
PAYPAL_CLIENT_SECRET=your_paypal_client_secret

# Email Configuration (für Versicherungsanträge)
SMTP_HOST=smtp.example.com
SMTP_PORT=587
SMTP_USER=your_email@example.com
SMTP_PASS=your_email_password
SMTP_FROM=your_email@example.com

# Queue Configuration (für Job-Verarbeitung)
REDIS_URL=redis://localhost:6379
QUEUE_CONCURRENCY=5
QUEUE_RETRY_ATTEMPTS=3

# Audit & Logging
AUDIT_LOG_RETENTION_DAYS=2555  # 7 Jahre
BILLING_LOG_LEVEL=info


