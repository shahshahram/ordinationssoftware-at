# Server Configuration
PORT=5000
NODE_ENV=development

# Database
MONGODB_URI=mongodb://localhost:27017/ordinationssoftware
MONGODB_TEST_URI=mongodb://localhost:27017/ordinationssoftware_test

# Security
JWT_SECRET=your_super_secure_jwt_secret_key_here
JWT_EXPIRE=24h
BCRYPT_ROUNDS=12

# Encryption
ENCRYPTION_KEY=your_32_character_encryption_key_here

# Email Configuration
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your_email@gmail.com
SMTP_PASS=your_app_password

# SMS Configuration (Twilio)
TWILIO_ACCOUNT_SID=your_twilio_account_sid
TWILIO_AUTH_TOKEN=your_twilio_auth_token
TWILIO_PHONE_NUMBER=your_twilio_phone_number

# ELGA Integration (für Kassenärzte)
ELGA_BASE_URL=https://elga.gv.at/api
ELGA_CLIENT_ID=your_elga_client_id
ELGA_CLIENT_SECRET=your_elga_client_secret

# e-Card System
ECARD_API_URL=https://ecard.gv.at/api
ECARD_CERT_PATH=/path/to/ecard/certificate.p12
ECARD_CERT_PASSWORD=your_cert_password

# File Upload
MAX_FILE_SIZE=10485760
UPLOAD_PATH=./uploads

# Backup Configuration
BACKUP_SCHEDULE=0 2 * * *
BACKUP_RETENTION_DAYS=30
BACKUP_PATH=./backups

# Logging
LOG_LEVEL=info
LOG_FILE=./logs/app.log
