# Abrechnungs-Konfiguration für Ordinationssoftware
# Diese Datei sollte in .env kopiert und mit echten Werten gefüllt werden

# ============================================
# KDok-Integration (Kassen-Dokumentationssystem)
# ============================================
KDOK_BASE_URL=https://kdok.gv.at/api
KDOK_CLIENT_ID=your-kdok-client-id
KDOK_CLIENT_SECRET=your-kdok-client-secret
KDOK_ENVIRONMENT=production
KDOK_AUTO_SUBMIT=true
KDOK_SUBMISSION_METHOD=xml
KDOK_BATCH_SIZE=100
KDOK_TIMEOUT=30000

# KDok-Zertifikate
KDOK_CLIENT_CERT_PATH=./certs/kdok-client.crt
KDOK_CLIENT_KEY_PATH=./certs/kdok-client.key
KDOK_CA_CERT_PATH=./certs/kdok-ca.crt
KDOK_CERT_PASSPHRASE=your-kdok-cert-passphrase

# ============================================
# GINA-Integration (Gesundheits-Informations-Netz-Adapter)
# ============================================
GINA_BASE_URL=https://gina.gv.at/api
GINA_CLIENT_ID=your-gina-client-id
GINA_CLIENT_SECRET=your-gina-client-secret
GINA_ENVIRONMENT=production
GINA_AUTO_SUBMIT=true
GINA_TIMEOUT=30000

# GINA-Zertifikate
GINA_CLIENT_CERT_PATH=./certs/gina-client.crt
GINA_CLIENT_KEY_PATH=./certs/gina-client.key
GINA_CA_CERT_PATH=./certs/gina-ca.crt
GINA_CERT_PASSPHRASE=your-gina-cert-passphrase

# ============================================
# Direktverrechnung - myCare
# ============================================
MYCARE_BASE_URL=https://api.mycare.at
MYCARE_API_KEY=your-mycare-api-key
MYCARE_CLIENT_ID=your-mycare-client-id
MYCARE_CLIENT_SECRET=your-mycare-client-secret
MYCARE_ENABLED=true
MYCARE_TIMEOUT=30000

# ============================================
# Direktverrechnung - RehaDirekt
# ============================================
REHADIREKT_BASE_URL=https://api.rehadirekt.at
REHADIREKT_API_KEY=your-rehadirekt-api-key
REHADIREKT_USERNAME=your-rehadirekt-username
REHADIREKT_PASSWORD=your-rehadirekt-password
REHADIREKT_ENABLED=true
REHADIREKT_TIMEOUT=30000

# ============================================
# Direktverrechnung - eAbrechnung
# ============================================
EABRECHNUNG_BASE_URL=https://api.eabrechnung.at
EABRECHNUNG_API_KEY=your-eabrechnung-api-key
EABRECHNUNG_CLIENT_ID=your-eabrechnung-client-id
EABRECHNUNG_CLIENT_SECRET=your-eabrechnung-client-secret
EABRECHNUNG_ENABLED=true
EABRECHNUNG_TIMEOUT=30000

# ============================================
# Direktverrechnung - Zertifikate (optional)
# ============================================
DIRECT_BILLING_CLIENT_CERT_PATH=./certs/direct-billing-client.crt
DIRECT_BILLING_CLIENT_KEY_PATH=./certs/direct-billing-client.key
DIRECT_BILLING_CA_CERT_PATH=./certs/direct-billing-ca.crt
DIRECT_BILLING_CERT_PASSPHRASE=your-direct-billing-cert-passphrase

# ============================================
# ELGA-Integration (bereits vorhanden)
# ============================================
# Siehe: backend/config/elga.config.js und backend/ELGA_GINA_CONFIG.md

